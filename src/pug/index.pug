doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title Tables
  body
    #app
      #drawing
      #interface

        transition-group(name="fade")
          .editor-menu(v-if="$store.state.editorMenu" key="one")
            .interface__btn.add-table(@click="$store.dispatch('addTable')")
              .btn__icon.icon-table
                .table-guest 2
              .btn__text 2-местный
            .interface__btn.add-table(@click="$store.dispatch('addTable', {guests: 4})")
              .btn__icon.icon-table.big
                .table-guest 4
              .btn__text 4-местный
            .interface__btn.add-table(@click="$store.dispatch('addTable', {guests: 6})")
              .btn__icon.icon-table.big
                .table-guest 6
              .btn__text 6-местный
            .interface__btn.add-text(@click="$store.dispatch('addText')")
              .btn__icon.icon-text T
              .btn__text Текст
            .interface__btn.add-line(@click="$store.dispatch('addWall')")
              .btn__icon.icon-line
                .line.grey
              .btn__text Стена
            .interface__btn.add-window(@click="$store.dispatch('addGlass')")
              .btn__icon.icon-line
                .line.blue
              .btn__text Стекло
            .interface__btn.add-bar(@click="$store.dispatch('addBar')")
              .btn__icon.icon-line
                .line.brown
              .btn__text Барная стойка
            .interface__btn.add-barnchair(@click="$store.dispatch('addBarnchair')")
              .btn__icon.icon-barnchair
              .btn__text Барный стул
            .interface__btn.add-decor(@click="$store.dispatch('addDecor')")
              .btn__icon.icon-decor
              .btn__text Декор
            .interface__btn.add-decor2(@click="$store.dispatch('addDecor2')")
              .btn__icon.icon-decor2.big
              .btn__text Мега-декор
            .interface__btn.export(@click="$store.dispatch('exportData')")
              .btn__icon.icon-text Ээ
              .btn__text Экспорт
            .interface__btn.clear(@click="$store.dispatch('clearAll')")
              .btn__icon.icon-text Оч
              .btn__text Очистить


          .element-menu(v-if="$store.state.elementMenu && $store.state.selectedElement" key="two")
            .interface__input.table-number(v-if="$store.state.selectedElement.attr('restotype') === 'table'")
              span Номер стола
              input(v-model="tableNum" @input="tableNumSend")
            .interface__input.table-number.wide(v-if="$store.state.selectedElement.type ==='text'")
              span Текст
              input(v-model="elementText" @input="elementTextSend")
            .interface__input.table-guests(v-if="$store.state.selectedElement.attr('restotype') === 'table'")
              span Кол. гостей
              input(v-model="guestNum" @input="guestNumSend")
            .interface__btn.rotate-left(@click="$store.dispatch('rotateElement', 'left')" v-if="$store.state.selectedElement.type ==='line' || $store.state.selectedElement.type ==='text'")
              .btn__icon.icon-rotate
              .btn__text Повернуть влево
            .interface__btn.rotate-right(@click="$store.dispatch('rotateElement')" v-if="$store.state.selectedElement.type ==='line' || $store.state.selectedElement.type ==='text'")
              .btn__icon.icon-rotate.right
              .btn__text Повернуть вправо
            .interface__btn.copy-element(@click="$store.dispatch('copyElement')")
              .btn__icon.icon-copy
              .btn__text Дублировать
            .interface__btn.remove-element(@click="$store.dispatch('removeElement')")
              .btn__icon.icon-remove
              .btn__text Удалить
