doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    title Tables
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css")
  body
    #app
      #drawing
      #interface
        transition-group(name="fade")
          .editor-menu(v-if="$store.state.editorMenu" key="one")
            .interface__btn.add-table(@click="$store.dispatch('addTable')") 
              .btn__icon.icon-table
                .table-guest 2
              .btn__text Add table
            .interface__btn.add-text(@click="$store.dispatch('addText')") 
              .btn__icon.icon-text T
              .btn__text Add text
            .interface__btn.add-line(@click="$store.dispatch('addLine')") 
              .btn__icon.icon-line
                .line.grey
              .btn__text Add wall
            .interface__btn.add-bar(@click="$store.dispatch('addLine2')") 
              .btn__icon.icon-line
                .line.brown
              .btn__text Add bar
            .interface__btn.add-window(@click="$store.dispatch('addGlass')") 
              .btn__icon.icon-line
                .line.blue
              .btn__text Add windows
            .interface__btn.add-decor(@click="$store.dispatch('addDecor')") 
              .btn__icon.icon-decor
              .btn__text Add decor
            .interface__btn.export(@click="$store.dispatch('exportData')") 
              .btn__icon.icon-text E
              .btn__text Export
            .interface__btn.clear(@click="$store.dispatch('clearAll')") 
              .btn__icon.icon-text C
              .btn__text Clear
          .element-menu(v-if="$store.state.elementMenu && $store.state.selectedElement" key="two")
            //- .interface__input.table-number Table number
            //- .interface__input.table-guests Number of guests
            .interface__btn.rotate-left
              .btn__icon.icon-rotate
              .btn__text Rotate left
            .interface__btn.rotate-right
              .btn__icon.icon-rotate.right
              .btn__text Rotate right
            .interface__btn.copy-element(@click="$store.dispatch('copyElement')")
              .btn__icon.icon-copy
              .btn__text Copy
            .interface__btn.remove-element(@click="$store.dispatch('removeElement')")
              .btn__icon.icon-remove
              .btn__text Remove
